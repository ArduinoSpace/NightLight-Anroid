<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="NightLightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="NightLightTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NightLightTheme.Splash" parent="NightLightTheme.NoActionBar">
        <item name="android:background">@drawable/layer_splash</item>
    </style>
</resources>